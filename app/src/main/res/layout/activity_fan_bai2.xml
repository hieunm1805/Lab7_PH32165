<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".Activity_Fan_Bai2">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/fan_background"
        android:gravity="center"
        android:text="FAN"
        android:textColor="@color/white"
        android:textSize="46dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/fan_img"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/fan_png" />

    <LinearLayout
        android:layout_marginTop="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/fast_mode"
            android:text="FAST"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="@drawable/button_custom"
            android:elevation="20dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/medium_mode"
            android:text="MEDIUM"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:background="@drawable/button_custom"
            android:elevation="20dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/slow_mode"
            android:text="SLOW"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_custom"
            android:elevation="20dp"/>

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/off_mode"
        android:layout_marginTop="15dp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="OFF"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="18dp"
        android:background="@drawable/off_custom"
        android:elevation="20dp"/>

</LinearLayout>